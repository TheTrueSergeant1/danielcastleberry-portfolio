---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="404: Not Found" description="The page you're looking for could not be found.">
    <div class="container">
        <h1>404: Page Not Found</h1>
        <p>It looks like the page you're looking for has moved or doesn't exist.</p>
        <a href="/" class="cta-primary">Go back home</a>
    </div>
</MainLayout>
<style>
    .container {
        text-align: center;
        padding: 4rem 0;
    }
    p {
        margin-bottom: 2rem;
        font-size: 1.2rem;
    }
    .cta-primary {
        text-decoration: none;
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        font-weight: 600;
        background-color: var(--accent-color);
        color: var(--bg-color);
        transition: transform 0.2s ease-out;
    }
    .cta-primary:hover {
        transform: translateY(-3px);
    }
</style>