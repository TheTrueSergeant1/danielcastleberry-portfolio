---
import { Image } from 'astro:assets';
import MainLayout from '../layouts/MainLayout.astro';
import headshot from '../assets/headshot.png';

// Define featured write-ups (Astro pages) manually
const allPosts = [
  {
    title: "Portfolio Website Overview",
    description: "An in-depth overview of my fully functional Astro cybersecurity portfolio website.",
    url: "/portfolio-overview",
    pubDate: "September 20, 2025"
  },
  // Add more posts here as you create new .astro pages
];

// Sort by newest first and pick top 2 for featured section
const featuredPosts = allPosts
  .sort((a, b) => new Date(b.pubDate).valueOf() - new Date(a.pubDate).valueOf())
  .slice(0, 2);
---

<MainLayout 
  title="Daniel Castleberry | Cybersecurity Portfolio" 
  description="The professional portfolio for Daniel Castleberry, a cybersecurity student."
>
  <!-- Hero Section -->
  <div class="hero-container" data-aos="fade-up">
    <Image 
      src={headshot} 
      alt="A professional headshot of Daniel Castleberry" 
      width="150" 
      class="headshot-img" 
    />
    <h1 class="hero-title">Daniel Castleberry</h1>
    <p class="hero-tagline">
      A proactive and dedicated Junior Cybersecurity student with hands-on internship experience in security operations. 
      Eager to apply technical skills and a diligent work ethic.
    </p>
    <div class="cta-buttons">
      <a href="/resume.pdf" class="button">View Resume</a>
      <a href="/contact" class="button">Get In Touch</a>
    </div>
  </div>

  <!-- Featured Skills -->
  <section class="home-section" data-aos="fade-up">
    <h2>Featured Skills</h2>
    <div class="skills">
      <span class="skill-tag">Security Tools (InsightIDR, ZScaler, Mimecast)</span>
      <span class="skill-tag">Digital Forensics</span>
      <span class="skill-tag">Threat Detection</span>
      <span class="skill-tag">Networking (CCNA Knowledge)</span>
    </div>
  </section>

  <!-- Recent Write-ups -->
  <section class="home-section" data-aos="fade-up">
    <h2>Recent Write-ups</h2>
    <div class="posts">
      {featuredPosts.map(post => (
        <a href={post.url} class="post-card">
          <h3>{post.title}</h3>
          <p>{post.description}</p>
        </a>
      ))}
    </div>
  </section>
</MainLayout>

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 3rem;
  }

  .headshot-img {
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero-tagline {
    max-width: 600px;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Sections */
  .home-section {
    margin: 4rem 0;
    text-align: center;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 1rem;
  }

  /* Posts */
  .posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .post-card {
    display: block;
    padding: 1rem 1.5rem;
    border-radius: 1rem;
    background-color: var(--glass-bg);
    border: 1px solid var(--border-color);
    text-decoration: none;
    color: var(--text-color);
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--accent-color);
    background-color: rgba(29, 78, 216, 0.2);
  }

  .post-card h3 {
    margin: 0 0 0.5rem 0;
    color: var(--accent-color);
  }

  .post-card p {
    margin: 0;
    color: var(--text-color);
  }
</style>
