<style>
    .contact-container {
        text-align: center;
    }
    .contact-container p {
        max-width: 500px;
        margin: 1rem auto 3rem auto;
        font-size: 1.1rem;
        line-height: 1.6;
    }
    .contact-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    /* --- Start of Updated Styles --- */
    .contact-card {
        display: flex;
        flex-direction: column; /* Lays out items vertically */
        align-items: center;    /* Centers items horizontally */
        text-align: center;     /* Centers the text itself */
        gap: 1rem;              /* Adjusts space between icon and text */
        text-decoration: none;
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        padding: 2rem 1.5rem;   /* Adjusted padding for vertical layout */
        border-radius: 2rem;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }
    .contact-card:hover {
        transform: translateY(-5px);
        border-color: var(--accent-color);
    }
    .icon {
        font-size: 2rem;
    }
    h3 {
        margin: 0 0 0.25rem 0;
        color: var(--accent-color);
    }
    .text p {
        margin: 0;
        font-size: 1rem;
        color: var(--text-color);
        overflow-wrap: break-word; /* Ensures long words like emails still wrap if needed */
    }
    /* --- End of Updated Styles --- */
</style>