---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Skills | Daniel Castleberry" description="A list of technical skills and competencies.">
    <h1>Technical Skills</h1>
    <div class="skills-grid">
        <div class="skill-card">
            <h2>Operating Systems</h2>
            <ul>
                 <li>Linux </li>
                 <li>Windows </li>
                 <li>Virtual Machines </li>
            </ul>
        </div>
        <div class="skill-card">
            <h2>Security Tools</h2>
            <ul>
                 <li>Insight IDR (Rapid7) </li>
                 <li>ServiceNow </li>
                 <li>ZScaler </li>
                 <li>Trend Micro Suite </li>
                 <li>Mimecast </li>
            </ul>
        </div>
        <div class="skill-card">
            <h2>Security Concepts</h2>
            <ul>
                 <li>Threat Detection </li>
                 <li>Digital Forensics </li>
                 <li>Cryptography </li>
                 <li>Networking (CCNA Knowledge) </li>
            </ul>
        </div>
        <div class="skill-card">
            <h2>Programming & Web</h2>
            <ul>
                 <li>C++ </li>
                 <li>Java </li>
                 <li>HTML, CSS, JavaScript (basic) </li>
            </ul>
        </div>
    </div>
</MainLayout>
<style>
  /* Styles for frosted glass squircle cards */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  .skill-card {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    border-radius: 2rem; /* Squircle effect */
    transition: transform 0.3s ease;
  }
  .skill-card:hover {
    transform: scale(1.05);
  }
  h2 { margin-top: 0; color: var(--accent-color); }
  ul { padding-left: 1.2rem; }
  li { margin-bottom: 0.5rem; }
</style>